<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/nativeContainer"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:background="#D1CFCF"
        android:minWidth="302dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/introNativeContainer"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#D1CFCF"
        android:minWidth="302dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nativeContainer" />


    <FrameLayout
        android:id="@+id/exitNativeContainer"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#D1CFCF"
        android:minWidth="302dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introNativeContainer" />


