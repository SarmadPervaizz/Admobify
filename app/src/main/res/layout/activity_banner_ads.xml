<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BannerAdsActivity">

    <FrameLayout
        android:id="@+id/adaptiveContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D1CFCF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/rectangleContainer"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#D1CFCF"
        android:minWidth="302dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adaptiveContainer" />


    <FrameLayout
        android:id="@+id/defaultContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#D1CFCF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangleContainer" />


    <FrameLayout
        android:id="@+id/collapsibleContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D1CFCF"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Ad Space"
            android:textSize="18sp" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>